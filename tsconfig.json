{
    "compilerOptions": {
      "module": "CommonJS",
      "noImplicitAny": false,
      "removeComments": true,
      "target": "ES6",
      "baseUrl": "src",
      "outDir": ".",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "lib": [
        "es2019",
        "DOM",
        "ES6",
        "DOM.Iterable"
      ],
      "paths": {
        "@api": ["api/*"],
        "@models": ["models/*"],
      }
    },
    "include": [
      "src/**/*"
    ],
    "files": [
      "./src/vue-shim.d.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }